      </header>-->

      <p class="alert alert-info" role="alert"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>

      <main role="main">
        <%= render @view_module, @view_template, assigns %>
      </main>

    <!--</div> <!-- /container -->
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>

    <script src="vendor/semantic/dist/components/visibility.js"></script>
    <script src="vendor/semantic/dist/components/sidebar.js"></script>
    <script src="vendor/semantic/dist/components/transition.js"></script>
    <script>
        $(document).ready(function() {

            // fix menu when passed
            $('.masthead').visibility({
                once: false,
                onBottomPassed: function() {
                    $('.fixed.menu').transition('fade in');
                },
                onBottomPassedReverse: function() {
                    $('.fixed.menu').transition('fade out');
                }
            });

            // create sidebar and attach to menu open
            $('.ui.sidebar').sidebar('attach events', '.toc.item');
          
            $('.ui.huge.primary.button').on('click', function () {
              $('.ui.mini.modal').modal('show');
            })
            $('.ui.small.primary.button').on('click', function() {
              var user = $('.ui.form').form('get value', 'username');
              var url = 'myroom101/' + user;
              location.href=url;
            })
        });
    </script>

  </body>
</html>
